{% trans_default_domain 'login' %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
         <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}" /> 
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="header header-transparent" id="header-main">
                <div id="navbar-top-main" class="navbar-top  navbar-dark bg-dark border-bottom">
                    <div class="container px-0">
                        <div class="navbar-nav align-items-center">
                            <div class="ml-auto">
                                <ul class="nav">
                                    {% if app.user is defined and app.user %}
                                        <li class="nav-item dropdown">
                                            <a class="nav-link pr-0" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                {{ app.user.fullName }} <i class="fas fa-user-circle"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-sm dropdown-menu-right" x-placement="bottom-end" style="position: absolute; will-change: transform; top: 0px; left: 0px; transform: translate3d(29px, 39px, 0px);">
                                                <a class="dropdown-item" href="{{ path('app_logout') }}">
                                                    <i class="fas fa-sign-out-alt"></i> {{ 'login.button.logout'|trans }}
                                                </a>
                                            </div>
                                        </li>
                                    {% else %}
                                        <a class="nav-link" href="{{ path('app_login') }}">{{ 'login.button.submit'|trans }}</a>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
