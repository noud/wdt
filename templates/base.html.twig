{% trans_default_domain 'login' %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
         <link rel="stylesheet" type="text/css" href="{{ asset('build/app.css') }}" /> 
        {% endblock %}
    </head>
    <body>
        {% block header %}
            <header class="header header-transparent" id="header-main">
                <div id="navbar-top-main" class="navbar-top  navbar-dark bg-dark border-bottom">
                    <div class="container px-0">
                        <div class="navbar-nav align-items-center">
                           <div class="navbar-custom-menu">
                               <ul class="nav navbar-nav">
                                    {% if app.user is defined and app.user %}
                                        <li class="dropdown">
                                            <a class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" href="#">
                                                {{ app.user.fullName }} <i class="fas fa-user-circle"></i>
                                            </a>
                                            <ul class="dropdown-menu dropdown-user">
                                               <li> <i class="fas fa-sign-out-alt"></i><a href="{{ path('app_logout') }}">{{ 'login.button.logout'|trans }}</a></li>
                                        	</ul>
                                        </li>
                                    {% else %}
                                        <a class="nav-link" href="{{ path('app_login') }}">{{ 'login.button.submit'|trans }}</a>
                                    {% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </header>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>