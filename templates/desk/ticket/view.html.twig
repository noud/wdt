{% extends 'base.html.twig' %}
{% trans_default_domain 'ticket' %}

{% block navbar %}navbar-dark bg-dark border-bottom{% endblock %}
{% block title %}{{ page.title }}{% endblock %}
{% block body %}
    <div class="main-content">
        <section class="slice">
            <div class="container py-5 px-md-0 d-flex align-items-center">
                <div class="w-100">
                    <div class="row row-grid justify-content-center justify-content-lg-between">
                        <div class="col-12 order-lg-2">
                            <div class="card shadow zindex-100 mb-0">
                                <div class="card-body px-md-5 py-5">
                                    <div class="mb-5">
                                        <h1 class="h1">{{ page.title }}</h1>
                                        <p class="text-muted mb-0">{{ page.content }}</p>
                                    </div>
                                    <span class="clearfix"></span>
                                        <div class="row">
                                         	<div class="col-sm-4">
                                         		<div class="row">
                                        	    	{{ 'ticket.field.status'|trans }}
                                        	    </div>
                                         		<div class="row">
                                        	    	<b>{{ ticket.status }}</b>
                                        	    </div>
                                         		<div class="row">
                                        	    	{{ 'ticket.field.due_date'|trans }}
                                        	    </div>
                                         		<div class="row">
                                             	    <b>{{ ticket.dueDate|date('d-m-Y') }}</b>
                                        	    </div>
                                         		<div class="row">
                                        	    	{{ 'ticket.field.classification'|trans }}
                                        	    </div>
                                         		<div class="row">
                                             	    <b>{{ ticket.classification }}</b>
                                        	    </div>
                                        	    <div class="row">
                                            	    {{ 'ticket.field.custom_fields.aantal_minuten_ingeschat'|trans }}
                                        	    </div>
                                         		<div class="row">
                                            	    <b>{{ attribute(ticket.customFields, 'Aantal minuten ingeschat') }}</b>
                                        	    </div>
                                        	    <div class="row">
                                            	    {{ 'ticket.field.custom_fields.aantal_uur_ingeschat'|trans }}
                                        	    </div>
                                         		<div class="row">
                                            	    <b>{{ attribute(ticket.customFields, 'Aantal uur ingeschat') }}</b>
                                        	    </div>
                                         		<div class="row">
                                        	    	{{ 'ticket.field.priority'|trans }}
                                        	    </div>
                                         		<div class="row">
                                        	    	<b>{{ ticket.priority }}</b>
                                        	    </div>
                                         		<div class="row">
                                        	    	Toevoegingen
                                        	    </div>
                                         		<div class="row">
                                        	    	<ul>
                                        	    	{% for ticketAttachment in ticketAttachments %}
                                                	    <li>
                                                	    <div class="row">
                                                	    <div class="col-sm-6">
                                                    	    <b><a href="{{ ticketAttachment.href }}?portalname=webdesigntilburg&inline=true" target="_blank">{{ ticketAttachment.name }}</a></b>
                                         	    	    </div>
                                         	    	    </div>
                                                	    </li>
                                        	    	{% endfor %}
                                            	    </ul>
                                        	    </div>
                                                <div class="row">
                                                    <div class="col-xs-6">
                                                        <div class="form-group">
                                                            <label class="control-label">Toevoegen</label>
                                                            <div action="/" class="dropzone" id="offer-dropzone">
                                                                <div class="dz-message" data-dz-message><span>Sleep uw bestand om te uploaden</span></div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                        	</div>
                                        	<div class="col-sm-8">
                                        	    <div class="row">
                                            	    <b>{{ 'ticket.field.nr'|trans }} {{ ticket.ticketNumber }} {{ ticket.subject }}</b>
                                        	    </div>
                                        	    <div class="row">
                                        	    	<ul>
                                            	    {% for ticketComment in ticketComments %}
                                                	    <li>
                                                	    <div class="row">
                                                	    <div class="col-sm-6">
                                                    	    <b>{{ ticketComment.commenter.name }}</b>
                                         	    	    </div>
                                                        <div class="col-sm-6">
                                            	    	    {{ ticketComment.commentedTime|date('d-m-Y H:i') }}
                                         	    	    </div>
                                                	    </div>
                                                	    <div class="row">
                                                    	    {{ ticketComment.content }}
                                                	    </div>
                                                	    </li>
                                            	    {% endfor %}
                                            	    </ul>
                                        	    </div>
                                        	    <div class="row">
                                                    <a href="{{ path('zoho_desk_tickets_comment_create', {ticketId: ticket.id }) }}" type="submit" class="btn btn-sm btn-primary btn-icon rounded-pill">
                                                        <span class="btn-inner--text">{{ 'ticket_comment.field.add_comment'|trans }}</span>
                                                        <span class="btn-inner--icon"><i class="fas fa-long-arrow-alt-right"></i></span>
                                                    </a>
                                        	    </div>
                                        	</div>
                                        </div>
                                    <br/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <div id="urls" data-attachment-post="{{path('attachment_post', {'id':ticket.id}) }}" data-attachment-remove="{{path('attachment_remove', {'id':ticket.id}) }}" />
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('dropzone') }}
{% endblock %}