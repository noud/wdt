                        <li>
                            <a href="{{ path('all_invoices') }}"><i class="fas fa-clipboard-list"></i>Facturen</a>
                        </li>
                        <li>
                            <a href="{{ path('user_register') }}"><i class="fas fa-sign-out-alt"></i>Registreer</a>
                        </li>
                        <li>
                            <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i>Uitloggen</a>
                        </li>
                    </ul>
                </nav>
                {% endif %}
            </div>
