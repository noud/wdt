<header class="page-header">
    <div class="container-fluid">
        <div class="row flex-row sm-gutters">
            <div class="col-xs-3 col-navigation">
                {% if app.user is not empty %}
                <div class="main-navigation-trigger">
                    <i class="fas fa-bars"></i>
                </div>
                <nav class="main-navigation">
                    <ul class="menu navigation">
                        <li>
                            <a href="{{ path('zoho_desk_tickets') }}"><i class="fas fa-shopping-basket"></i>Tickets</a>
                        </li>
                        <li>
                            <a href="{{ path('zoho_desk_tickets_create') }}"><i class="fas fa-shopping-basket"></i>Ticket toevoegen</a>
