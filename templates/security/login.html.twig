{% extends 'base.html.twig' %}

{% block navbar %}navbar-dark bg-dark border-bottom{% endblock %}
{% block title %}{{ 'account.login'|trans }}{% endblock %}
{% block body %}
    <div class="main-content">
        <section class="slice slice-lg min-vh-100 d-flex align-items-center bg-gradient-dark">
            <div class="container py-5 px-md-0 d-flex align-items-center">
                <div class="w-100">
                    <div class="row row-grid justify-content-center justify-content-lg-between">
                        <div class="col-sm-8 col-lg-6 col-xl-5 order-lg-2">
                            <div class="card shadow zindex-100 mb-0">
                                <div class="card-body px-md-5 py-5">
                                    <div class="mb-5">
                                        <h6 class="h3">{{ 'account.login'|trans }}</h6>
                                        <p class="text-muted mb-0">{{ 'account.login_text'|trans }}</p>
                                        {% if error %}
                                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                        {% endif %}
                                    </div>
                                    <span class="clearfix"></span>
                                    <form role="form" method="post">
                                        <div class="form-group">
                                            <label class="form-control-label" for="input-email">{{ 'account.field.email'|trans }}:</label>
                                            <div class="input-group input-group-merge">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                                </div>
                                                <input type="email" class="form-control" id="input-email" name="email" placeholder="{{ 'account.field.email'|trans }}">
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <div>
                                                    <label class="form-control-label" for="input-password">{{ 'account.field.password'|trans }}:</label>
                                                </div>
                                                <div class="mb-2">
                                                    <a href="{{ path('app_reset_password_request') }}" class="small text-muted text-underline--dashed border-primary">{{ 'account.password_forgotten'|trans }}</a>
                                                </div>
                                            </div>
                                            <div class="input-group input-group-merge">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text"><i class="fas fa-key"></i></span>
                                                </div>
                                                <input type="password" name="password" class="form-control" id="input-password" placeholder="{{ 'account.field.password'|trans }}">
                                                <div class="input-group-append">
                                                  <span class="input-group-text">
                                                    <i class="fas fa-eye"></i>
                                                  </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            <button type="submit" class="btn btn-sm btn-primary btn-icon rounded-pill">
                                                <span class="btn-inner--text">{{ 'account.button.sign_in'|trans }}</span>
                                                <span class="btn-inner--icon"><i class="fas fa-long-arrow-alt-right"></i></span>
                                            </button>
                                        </div>
                                    </form>
                                </div>
                                <div class="card-footer px-md-5"><small>{{ 'reset_password.link.label'|trans({},'reset_password') }}</small>
                                    <a href="{{ path('app_reset_password_request') }}" class="small font-weight-bold">{{ 'reset_password.link.text'|trans({},'reset_password') }}</a></div>
                            </div>
                        </div>
                        <div class="col-lg-5 order-lg-1 d-none d-lg-block">
                            <div class="text-center text-lg-left">
                                <!-- TODO: overleggen met de klant? -->
                                <h1 class="text-white mt-4 mb-3">Klantportaal</h1>
                                <p class="lead lh-180 text-white">{{ welcomeText }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- SVG shape -->
            <figure class="shape-container shape-position-bottom" style="height: 429px;">
                <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" preserveAspectRatio="none" x="0px" y="0px" viewBox="0 0 1000 300" style="enable-background:new 0 0 1000 300;" xml:space="preserve" class="ie-shape-wave-1">
                  <path d="M 0 246.131 C 0 246.131 31.631 250.035 47.487 249.429 C 65.149 248.755 82.784 245.945 99.944 241.732 C 184.214 221.045 222.601 171.885 309.221 166.413 C 369.892 162.581 514.918 201.709 573.164 201.709 C 714.375 201.709 772.023 48.574 910.547 21.276 C 939.811 15.509 1000 24.025 1000 24.025 L 1000 300.559 L -0.002 300.559 L 0 246.131 Z"></path>
                </svg>
            </figure>
        </section>
    </div>
{% endblock %}
