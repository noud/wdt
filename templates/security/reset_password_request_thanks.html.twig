{% extends 'base.html.twig' %}
{% trans_default_domain 'reset_password' %}

{% block navbar %}navbar-dark bg-dark border-bottom{% endblock %}
{% block title %}{{ 'reset_password.title.password_request_sent'|trans }}{% endblock %}
{% block body %}
    <div class="main-content">
        <section class="slice slice-lg min-vh-100 d-flex align-items-center bg-gradient-dark">
            <div class="container py-5 px-md-0 d-flex align-items-center">
                <div class="w-100">
                    <div class="row row-grid justify-content-center justify-content-lg-between">
                        <div class="col-12 order-lg-2">
                            <div class="card shadow zindex-100 mb-0">
                                <div class="card-body px-md-5 py-5">
                                    <div class="mb-5">
                                        <h6 class="h3">{{ 'reset_password.title.password_request_sent'|trans }}</h6>
                                        <p class="text-muted mb-0"></p>
                                    </div>

                                    {% for message in app.flashes('notice') %}
                                        <div class="alert alert-error">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                    {% for message in app.flashes('success') %}
                                        <div class="alert alert-success">
                                            {{ message }}
                                        </div>
                                    {% endfor %}
                                    {% if error is defined and error is not null %}
                                        <div class="alert alert-error">
                                            {{ error.messageKey|trans(error.messageData, 'security') }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
